<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutorial_Screen">

    <ImageView
        android:id="@+id/moreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="AtiveMore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <ImageView
        android:id="@+id/perfilButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="AtivePerfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <ImageView
        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="AtiveMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="663dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/Tutorial_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="6dp"
            android:text="Como se portar e vestir numa cozinha"
            android:textSize="20sp"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/tutorial_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Como usar ferramentas da cozinha (Básico)"
            android:textSize="20sp"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/tutorial_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cuidados da cozinha"
            android:textSize="20sp"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/tutorial_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Como usar ferramentas da cozinha (Intermediario)"
            android:textSize="20sp"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/tutorial_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Higiene na cozinha (Bônus)"
            android:textSize="20sp"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/tutorial_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Como usar ferramentas da cozinha (Avançado)"
            android:textSize="20sp"
            app:cornerRadius="0sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>